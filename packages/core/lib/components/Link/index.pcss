.pr-link {
    color: var(--titleFontColor);
    font-family: var(--titleFontFamily);
    font-size: var(--otherFontSize);
    font-weight: var(--titleFontWidth--medium);
    outline: 0;
    transition: all 0.3s linear 0s;

    &--light {
        color: #fff;
    }

    &--inherit {
        color: inherit;
    }

    &:hover {
        color: var(--themeColor);
    }
}
