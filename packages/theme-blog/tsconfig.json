{
    "extends": "./node_modules/@yzfe/vuepress-plugin-typescript/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@Theme/*": ["./*"],
            "@Core/*": ["node_modules/@yzfe/vuepress-theme-piero-core/lib/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
        "typings/*.d.ts",
        "node_modules/@yzfe/vuepress-theme-piero-core/lib/**/*.ts",
        "node_modules/@yzfe/vuepress-theme-piero-core/lib/**/*.vue"
    ]
}
