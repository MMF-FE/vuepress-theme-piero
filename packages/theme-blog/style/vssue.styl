$vssue-theme-color = #5bd7c5
// the text color (used for common text)
$vssue-text-color = #888
// the text light color (used for muted text, disabled text, etc)
$vssue-text-light-color = #a3aab1
// the border color
$vssue-border-color = #eee
// the progress color
$vssue-progress-color = $vssue-theme-color
// the font size
$vssue-font-size = 14px
// the font family
$vssue-font-family = inherit

@import '~vssue/src/styles/index'
@import '~github-markdown-css/github-markdown.css'

.markdown-body {
    font-size: 14px
}